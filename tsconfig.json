{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    // ts-node specific options
    "esm": true,
    "experimentalSpecifierResolution": "node" // May be needed depending on imports
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
