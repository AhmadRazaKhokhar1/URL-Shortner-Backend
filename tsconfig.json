{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    // ts-node specific options
    "esm": true,
    "experimentalSpecifierResolution": "node" // May be needed depending on imports
  },
  "include": ["./*.ts", "app.ts"],
  "exclude": ["node_modules"]
}
